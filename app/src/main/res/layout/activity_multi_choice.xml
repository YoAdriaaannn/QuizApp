<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_multi_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/view_question_spacing"

        android:background="@color/colorTransWindow2"
        android:orientation="vertical"

        android:padding="@dimen/standard_padding">

        <TextView
            android:id="@+id/textView_question_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="TextView"
            android:textColor="@color/colorText1" />

        <RadioGroup
            android:id="@+id/radio_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton_answer_multi_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:buttonTint="@color/colorText1"
                android:text="@string/radiobutton_multi_answer_1"
                android:textColor="@color/colorText1" />

            <RadioButton
                android:id="@+id/radioButton_answer_multi_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:buttonTint="@color/colorText1"

                android:text="@string/radiobutton_answer_multi_2"
                android:textColor="@color/colorText1" />

            <RadioButton
                android:id="@+id/radioButton_answer_multi_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:buttonTint="@color/colorText1"
                android:text="@string/radiobutton_multi_answer_3"

                android:textColor="@color/colorText1" />

            <RadioButton
                android:id="@+id/radioButton_answer_multi_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:buttonTint="@color/colorText1"
                android:text="@string/radiobutton_mutli_answer_4"

                android:textColor="@color/colorText1" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/standard_padding">


            <Button
                android:id="@+id/button_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_fast_rewind_white_48dp"
                android:onClick="decrement" />

            <Button
                android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_assignment_turned_in_white_48dp"
                android:onClick="submitAnswer"

                />


            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_fast_forward_white_48dp"
                android:onClick="increment"

                />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>