<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_multi_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:visibility="gone"
    tools:context="com.adrianraff.quizapp.MultiChoiceActivity">

    <TextView
        android:id="@+id/textView_question_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="TextView"
         />
    <RadioGroup
        android:id="@+id/radio_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton
        android:id="@+id/radioButton_answer_multi_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/radiobutton_multi_answer_1"
         />

    <RadioButton
        android:id="@+id/radioButton_answer_multi_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/radiobutton_answer_multi_2"
        />

    <RadioButton
        android:id="@+id/radioButton_answer_multi_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/radiobutton_multi_answer_3"
        />

    <RadioButton
        android:id="@+id/radioButton_answer_multi_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/radiobutton_mutli_answer_4"
        />
</RadioGroup>
    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:onClick="submitAnswer"
        android:text="Submit Answer"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/button_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:onClick="decrement"
        android:text="PREV"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:onClick="increment"
        android:text="NEXT"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />
</LinearLayout>
