<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- BG Image -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg3" />

    <!-- Scroll view as we have lots of text bleed off the bottom -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/colorTransparent"
            android:orientation="vertical"
            android:padding="@dimen/standard_padding">

            <!-- Header app namm -->
            <TextView
                android:id="@+id/text_header_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/colorTransWindow"
                android:gravity="center_horizontal"
                android:padding="@dimen/standard_padding"
                android:text="@string/title_1"
                android:textColor="@color/colorText1"
                android:textSize="@dimen/text_header_1" />

            <!-- Intro message -->
            <TextView
                android:id="@+id/textView_intro_instructions"
                style="@style/normalText"

                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/text_instructions"

               />

            <!-- Grab user name -->

            <EditText
                android:id="@+id/editText_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:hint="@string/please_enter_your_first_and_last_name"
                android:inputType="textPersonName"
                android:textColor="@color/colorText1" />

            <!-- Grab email address to send result to -->

            <EditText
                android:id="@+id/editText_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:hint="@string/email"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/colorText1" />

            <!-- Submit info and begin quiz -->

            <Button
                android:id="@+id/button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_forward_white_48dp"
                android:onClick="startApp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
