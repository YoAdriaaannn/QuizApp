<!-- Begin layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- BG Image -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <!-- Scroll view for quiz results -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <!-- Score display -->

            <TextView
                android:id="@+id/textView_score"
                style="@style/normalText" />

            <!-- Grade display -->

            <TextView
                android:id="@+id/textView_grade_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/colorTransWindow2"
                android:gravity="center"
                android:text="@string/end_your_grade_is"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/standard_text2" />

            <TextView
                android:id="@+id/textView_grade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/colorTransWindow"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/header2" />


            <!-- Results -->

            <TextView
                android:id="@+id/textView_end_totals"
                style="@style/normalText"

                />

            <!-- Email button with icon -->

            <Button
                android:id="@+id/button_play_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@drawable/ic_mail_outline_white_48dp"
                android:onClick="sendMail" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>