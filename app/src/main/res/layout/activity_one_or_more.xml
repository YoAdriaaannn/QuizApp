<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_one_or_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg5"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/view_question_spacing"
        android:padding="@dimen/standard_padding"
        android:background="@drawable/layout_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_question_one_or_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Question"
            android:textColor="@color/colorText1" />


        <CheckBox
            android:id="@+id/checkbox_answer_one_or_more_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:backgroundTint="@color/colorText1"
            android:buttonTint="@color/colorText1"
            android:text="Answer 1"
            android:textColor="@color/colorText1" />


        <CheckBox
            android:id="@+id/checkbox_answer_one_or_more_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:backgroundTint="@color/colorText1"
            android:buttonTint="@color/colorText1"
            android:text="Answer 2"
            android:textColor="@color/colorText1" />

        <CheckBox
            android:id="@+id/checkbox_answer_one_or_more_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:backgroundTint="@color/colorText1"
            android:buttonTint="@color/colorText1"
            android:text="Answer 3"
            android:textColor="@color/colorText1" />


        <CheckBox
            android:id="@+id/checkbox_answer_one_or_more_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:backgroundTint="@color/colorText1"
            android:buttonTint="@color/colorText1"
            android:text="Answer 4"
            android:textColor="@color/colorText1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/standard_padding">


            <Button
                android:id="@+id/button_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_fast_rewind_white_48dp"
                android:onClick="decrement" />

            <Button
                android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_assignment_turned_in_white_48dp"
                android:onClick="submitAnswer"
                />


            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_fast_forward_white_48dp"
                android:onClick="increment"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>






